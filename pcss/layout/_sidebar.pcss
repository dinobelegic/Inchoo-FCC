.sidebar__shopping-options {
    display: none;

    @media(--large) {
        display: block;

        & h2 {
            font-family: Open Sans; 
            font-size: pxtorem(16px);
            line-height: pxtorem(24px);
            text-transform: uppercase;
            color: var(--primary__color);
        }

        & button {
            display: none;
        }
    }
}
